<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="profile-container">
      <div class="row">
        <div class="col-md-3">
          <%= render 'books/show', user: @user %>
          <%= render 'books/new', book: @bookr %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tbody>
             <div>
             <tr>
               <td><%= link_to @user do %>
                   <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:"40x40" %>
               <br>
               <%= @book.user.name %>
               <% end %>
               </td>
               <td><%= link_to book_path do %>
                   <%= @book.title %>
                   <% end %>
               </td>
             <td><%= @book.body %></td>
             <% if @book.user_id == current_user.id %>
             <td><%= link_to edit_book_path, class:"btn btn-success" do %>Edit<% end %></td>
             <td><%= link_to book_path, class:"btn btn-danger",method: :delete do %>Destroy<% end %></td>
             <% end %>
           </div>
         </tbody>
         </table>
        </div>
      </div>
    </div>
 </div>

</main>