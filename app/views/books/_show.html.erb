 
 <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr class="profile-name">
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr class="profile-introduction">
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <p><%= link_to edit_user_path(user),class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %><% end %></p>